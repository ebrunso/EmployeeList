<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeDetailsActivity">

    <TextView
        android:id="@+id/tvFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvFirstName"
        app:layout_constraintEnd_toEndOf="@+id/tvFirstName"/>

    <TextView
        android:id="@+id/tvStreet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Street Address"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvLastName"
        app:layout_constraintEnd_toEndOf="@+id/tvLastName"/>

    <TextView
        android:id="@+id/tvCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="City"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvStreet"
        app:layout_constraintEnd_toEndOf="@+id/tvStreet"/>

    <TextView
        android:id="@+id/tvState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="State"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCity"
        app:layout_constraintEnd_toEndOf="@+id/tvCity"/>

    <TextView
        android:id="@+id/tvZip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Zip Code"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvState"
        app:layout_constraintEnd_toEndOf="@+id/tvState"/>

    <TextView
        android:id="@+id/tvTaxID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tax ID"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvZip"
        app:layout_constraintEnd_toEndOf="@+id/tvZip"/>

    <TextView
        android:id="@+id/tvPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Position"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTaxID"
        app:layout_constraintEnd_toEndOf="@+id/tvTaxID"/>

    <TextView
        android:id="@+id/tvDepartment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Department"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPosition"
        app:layout_constraintEnd_toEndOf="@+id/tvPosition"/>

    <Button
        android:id="@+id/btnUpdateEmployeeOnList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Employee on LIST"
        android:onClick="onClick"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDepartment"
        app:layout_constraintEnd_toEndOf="@+id/tvDepartment"/>

    <Button
        android:id="@+id/btnDeleteEmployeeOnList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Employee on LIST"
        android:onClick="onClick"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btnUpdateEmployeeOnList"
        app:layout_constraintEnd_toEndOf="@+id/btnUpdateEmployeeOnList"/>

</androidx.constraintlayout.widget.ConstraintLayout>