<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeListActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvEmployee"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnGoToNewEmployee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Employee"
        android:onClick="onClick"
        app:layout_constraintTop_toBottomOf="@id/rvEmployee"
        app:layout_constraintEnd_toEndOf="@id/rvEmployee"/>

    <Button
        android:id="@+id/btnGoToDeleteEmployee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Employee"
        android:onClick="onClick"
        app:layout_constraintTop_toBottomOf="@id/btnGoToNewEmployee"
        app:layout_constraintEnd_toEndOf="@id/btnGoToNewEmployee"/>

    <Button
        android:id="@+id/btnGoToUpdateEmployee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Employee"
        android:onClick="onClick"
        app:layout_constraintTop_toBottomOf="@id/btnGoToDeleteEmployee"
        app:layout_constraintEnd_toEndOf="@id/btnGoToDeleteEmployee"/>

    <Button
        android:id="@+id/btnGoToFilterEmployee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter Employee"
        android:onClick="onClick"
        app:layout_constraintTop_toBottomOf="@id/btnGoToUpdateEmployee"
        app:layout_constraintEnd_toEndOf="@id/btnGoToUpdateEmployee"/>

</androidx.constraintlayout.widget.ConstraintLayout>